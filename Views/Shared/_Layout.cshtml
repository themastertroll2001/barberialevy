<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Barberia</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/Barberia.styles.css" asp-append-version="true" />
    <!-- Agregar FontAwesome -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/css/all.min.css" asp-append-version="true">
    <link rel="stylesheet" href="~/css/styles.css" asp-append-version="true">
    <style>
    .navbar-toggler-icon {
        color: white;
    }
    </style>
    <!--CALENDARIO SCRIPTS-->
    <link rel="stylesheet" href="~/css/main.css" />
    <script src="~/js/main.js"></script>
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-dark border-bottom box-shadow mb-3">
            <div class="container-fluid">
                <a class="navbar-brand text-white" asp-area="" asp-controller="Home" asp-action="Index">Barberia Levy</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation" style="background-color: white;" >
                    <span class="navbar-toggler-icon" ></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between" style="color: white;">
                    <ul class="navbar-nav flex-grow-1 ">
                        <li class="nav-item">
                            <a class="nav-link text-light" asp-area="" asp-controller="Home" asp-action="Index">Cortes</a>
                        </li>
                       <li class="nav-item">
                            <div class="dropdown">
                                <button class="dropbtn ">
                            <a class="nav-link text-light" asp-area="" asp-controller="Home" asp-action="Compras">Compras</a>
                                </button>
                                <div class="dropdown-content">
                            <a class="nav-link text-light " asp-area="" asp-controller="Home" asp-action="Inventarioprod">Productos</a>
                                </div>
                                </div>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-light" asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
                        </li>
                        <li class="nav-item">
                            <div class="dropdown">
                                <button class="dropbtn " >
                                    <a class="nav-link text-light " asp-area="" asp-controller="Salon" asp-action="Index">Salon de belleza</a>     
                                </button>
                                <div class="dropdown-content">
                                    <a class="nav-link text-light " asp-area="" asp-controller="Event" asp-action="Create">Registro de citas</a>
                                    <a class="nav-link text-light " asp-area="" asp-controller="Salon" asp-action="Citasdiarias">Citas </a>

                                </div>
                            </div>
                       </li>
                        <li class="nav-item">
                            <a class="nav-link text-light" asp-area="" asp-controller="Home" asp-action="Tienda">Tienda</a>
                        </li>
                     </ul>
                    
                </div>
               
            </div>
            <div class="collapse navbar-collapse" id="navbarSupportedContent">

                <form class="d-flex">
                    <button class="btn btn-outline-light me-1" type="submit" style="margin-right: 5px;">
                        <i class="bi-cart-fill me-1"></i>
                        Carrito
                        <span class="badge bg-dark text-white ms-1 rounded-pill">0</span>
                    </button>
                </form>
            </div>
            <partial name="_LoginPartial"/>
        </nav>
    </header>
     
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>
    
    <footer class=" fixed-bottom footer bg-dark " >
        <div class="container text-white">
            &copy; 2023 - Barberia - <a asp-area="" asp-controller="Home" asp-action="Privacy" class="text-white">Levy</a>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
